{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/no-children-prop": 0,
    "no-undef": 0,
    "react/prop-types": 0,
    "quotes": [2, "single"],
    "semi": [2, "never"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
